        switch(op) {
        case 0:

        break;
        case 1:
            system("cls");
            ordenar_alfabetico();
            system("pause");
        break;
        case 2:
            system("cls");
            //ordenar_criacao();
            system("pause");
        break;
        case 3:
            system("cls");
            //ordenar_randomica();
            system("pause");
        break;
        default:
            cout<<"\nOpção inválida, tente novamente!\n";
            system("pause");
        break;
        }
    } while(op != 0);
}

